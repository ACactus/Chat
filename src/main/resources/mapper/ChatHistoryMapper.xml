<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jshang.chat.mapper.ChatHistoryMapper">

    <resultMap id="BaseResultMap" type="com.jshang.chat.pojo.entity.ChatHistory">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="conversationId" column="conversation_id" jdbcType="BIGINT"/>
            <result property="role" column="role" jdbcType="TINYINT"/>
            <result property="rawContent" column="raw_content" jdbcType="VARCHAR"/>
            <result property="rate" column="rate" jdbcType="TINYINT"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
            <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,seq,conversation_id,
        role,raw_content,rate,
        create_time,update_time
    </sql>

    <select id="listChatHistory" resultType="com.jshang.chat.pojo.entity.ChatHistory">
        SELECT ch.id, ch.seq, ch.conversation_id, ch.role, ch.raw_content, ch.rate, ch.create_time, ch.update_time
        FROM chat_history ch LEFT JOIN chat_conversation cc  ON ch.conversation_id = cc.id
        <where>
            <if test="conversationId != null">
                AND cc.id = #{conversationId}
            </if>
            <if test="conversationSeq != null and conversationSeq != ''">
                AND cc.seq = #{conversationSeq}
            </if>
            <if test="userId != null">
                AND cc.user_id = #{userId}
            </if>
            <if test="seq != null">
                AND ch.seq = #{seq}
            </if>
        </where>
    </select>
</mapper>
